    <!--字符过滤器-->
    <filter>
        <filter-name>charset</filter-name>
        <filter-class>com.yangsen.filter.EncodeFilter</filter-class>
        <init-param>
            <param-name>encode</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>charset</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <!--验证码-->
    <servlet>
        <!--<!–- 生成图片的Servlet –->-->
        <servlet-name>Kaptcha</servlet-name>
        <servlet-class>com.google.code.kaptcha.servlet.KaptchaServlet</servlet-class>

        <!--<!–- 是否有边框–->-->
        <init-param>
            <param-name>kaptcha.border</param-name>
            <param-value>no</param-value>
        </init-param>
        <!--<!–- 字体颜色 –->-->
        <init-param>
            <param-name>kaptcha.textproducer.font.color</param-name>
            <param-value>black</param-value>
        </init-param>
        <!--<!–- 图片宽度 –->-->
        <init-param>
            <param-name>kaptcha.image.width</param-name>
            <param-value>100</param-value>
        </init-param>
        <!--<!–- 使用哪些字符生成验证码 –->-->
        <init-param>
            <param-name>kaptcha.textproducer.char.string</param-name>
            <param-value>0987654321</param-value>
        </init-param>
        <!--<!–- 图片高度 –->-->
        <init-param>
            <param-name>kaptcha.image.height</param-name>
            <param-value>30</param-value>
        </init-param>
        <!--<!–- 字体大小 –->-->
        <init-param>
            <param-name>kaptcha.textproducer.font.size</param-name>
            <param-value>30</param-value>
        </init-param>
        <!--<!–- 字符个数 –->-->
        <init-param>
            <param-name>kaptcha.textproducer.char.length</param-name>
            <param-value>4</param-value>
        </init-param>
        <!--<!–- 使用哪些字体 –->-->
        <init-param>
            <param-name>kaptcha.textproducer.font.names</param-name>
            <param-value>宋体,楷体,微软雅黑</param-value>
        </init-param>
    </servlet>
    <!--<!–- 映射的url –->-->
    <servlet-mapping>
        <servlet-name>Kaptcha</servlet-name>
        <url-pattern>/Kaptcha</url-pattern>
    </servlet-mapping>
    <!--user过滤器-->
    <filter>
        <filter-name>UserFilter</filter-name>
        <filter-class>com.yangsen.filter.UserFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>UserFilter</filter-name>
        <url-pattern>*.do</url-pattern>
    </filter-mapping>
    <!--权限过滤器-->
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>com.yangsen.filter.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/addMessagePrompt.do</url-pattern>
        <url-pattern>/my/message/list.do</url-pattern>
        <url-pattern>/edit/message.do</url-pattern>
        <url-pattern>/doedit/message.do</url-pattern>
        <url-pattern>/del/message.do</url-pattern>
        <url-pattern>/userInfo.do</url-pattern>
        <url-pattern>/editUserPrompt.do</url-pattern>
        <url-pattern>/editUser.do</url-pattern>
    </filter-mapping>
</web-app>